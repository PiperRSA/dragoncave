PUBLIC_DOMAIN=hexwyrm.com
INTERNAL_DOMAIN=hexwyrm.home.arpa
PI_HOST_IP=192.168.68.145
TZ=Africa/Johannesburg

# Storage layout (override with actual mount points)
HOARD1_ROOT=/srv/hoard1
HOARD2_ROOT=/srv/hoard2
VAULT3_ROOT=/mnt/vault3

# Observability exporters
SMARTCTL_DEVICES=
SMARTCTL_INTERVAL=1800

# Cloudflare / ACME
CLOUDFLARE_EMAIL=
CLOUDFLARE_API_TOKEN=

# InfluxDB token (set after onboarding)
INFLUX_TOKEN=

# Optional restic repository
RESTIC_REPOSITORY=${VAULT3_ROOT}/restic
RESTIC_PASSWORD_FILE=/opt/dragoncave/secrets/RESTIC_PASSWORD

# Stacks to deploy (space-separated compose filenames)
ENABLED_STACKS="sec-docker-socket-proxy.yml edge-traefik.yml tunnel-cloudflared.yml portainer.yml dns-pihole.yml obs-logs.yml obs-exporters.yml obs-monitoring.yml data-services.yml"
